<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_horizontal_placar"
    tools:context=".placar">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_aumentartime_a"
        style="@style/button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/btn_aumentartime_a"
        android:textSize="50sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/tv_time_a_pontos"
        app:layout_constraintTop_toBottomOf="@id/tv_time_a_pontos"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_diminuirtime_a"
        style="@style/button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="5dp"
        android:text="@string/btn_diminuirtime_a"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@id/tv_time_a_pontos"
        app:layout_constraintBottom_toBottomOf="@id/btn_aumentartime_a"
        app:layout_constraintStart_toEndOf="@id/btn_aumentartime_a" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_aumentartime_b"
        style="@style/button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:text="@string/btn_aumentartime_b"
        android:textSize="50sp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/tv_time_b_pontos"
        app:layout_constraintTop_toBottomOf="@id/tv_time_b_pontos" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_diminuirtime_b"
        style="@style/button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="5dp"
        android:text="@string/btn_diminuirtime_b"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_aumentartime_b"
        app:layout_constraintStart_toEndOf="@id/btn_aumentartime_b"
        app:layout_constraintEnd_toEndOf="@id/tv_time_b_pontos"/>

    <EditText
        android:id="@+id/edt_time_a"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:hint="@string/time_anome"
        android:textAlignment="center"
        android:background="@drawable/shape_desing_editext"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_finalizar"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finalizar_jogo"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_diminuirtime_a"
        app:layout_constraintEnd_toStartOf="@+id/btn_aumentartime_b"
        app:layout_constraintStart_toEndOf="@id/btn_diminuirtime_a"
        app:layout_constraintTop_toBottomOf="@+id/rodada" />


    <EditText
        android:id="@+id/edt_time_b"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:hint="@string/time_bnome"
        android:textAlignment="center"
        android:background="@drawable/shape_desing_editext"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time_a_pontos"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="@string/tv_time_a_pontos"
        android:textAlignment="center"
        android:background="@drawable/shape_desing_textview"
        android:textColor="@color/white"
        android:textSize="100sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/edt_time_a"
        app:layout_constraintStart_toStartOf="@id/edt_time_a"
        app:layout_constraintTop_toBottomOf="@id/edt_time_a" />

    <TextView
        android:id="@+id/tv_time_b_pontos"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/shape_desing_textview"
        android:text="@string/tv_time_b_pontos"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="100sp"
       android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/edt_time_b"
        app:layout_constraintStart_toStartOf="@id/edt_time_b"
        app:layout_constraintTop_toBottomOf="@id/edt_time_b" />

    <TextView
        android:id="@+id/rodada"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:background="@drawable/shape_desing_textview"
        android:gravity="center"
        android:text="@string/tv_valor_rodada"
        android:textColor="@color/white"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="@id/tv_titulo_rodada"
        app:layout_constraintStart_toStartOf="@id/tv_titulo_rodada"
        app:layout_constraintTop_toTopOf="@+id/edt_time_a" />


    <TextView
        android:id="@+id/tv_titulo_rodada"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_titulo_rodada"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rodada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rodada_up_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/arrow_drop_up_10"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/rodada"
        app:layout_constraintStart_toStartOf="@id/rodada"
        app:layout_constraintTop_toTopOf="@id/rodada" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rodada_down_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/arrow_drop_down_10"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/rodada"
        app:layout_constraintEnd_toEndOf="@id/rodada"
        app:layout_constraintBottom_toBottomOf="@id/rodada" />

    <TextView
        android:id="@+id/timer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_text_view"
        android:background="@drawable/shape_desing_textview"
        android:textColor="@color/white"
        android:padding="5dp"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/rodada"
        app:layout_constraintStart_toStartOf="@id/rodada"
        app:layout_constraintEnd_toEndOf="@id/rodada"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_button"
        style="@style/button"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:textSize="20sp"
        android:text="@string/start_button"
        app:layout_constraintBottom_toBottomOf="@id/stop_button"
        app:layout_constraintEnd_toStartOf="@id/stop_button"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/stop_button"
        style="@style/button"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:text="@string/stop_button"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/btn_finalizar"
        app:layout_constraintEnd_toEndOf="@id/btn_finalizar"
        app:layout_constraintTop_toBottomOf="@id/btn_finalizar"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset_button"
        style="@style/button"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:text="@string/reset_button"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/stop_button"
        app:layout_constraintStart_toEndOf="@id/stop_button"/>

    <TextView
        android:id="@+id/tv_titulo_time_a"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_titulo_time_a"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/edt_time_a"
        app:layout_constraintStart_toStartOf="@id/edt_time_a" />

    <TextView
        android:id="@+id/tv_titulo_time_b"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_titulo_time_b"
        app:layout_constraintBottom_toTopOf="@id/edt_time_b"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="@id/edt_time_b"/>

</androidx.constraintlayout.widget.ConstraintLayout>